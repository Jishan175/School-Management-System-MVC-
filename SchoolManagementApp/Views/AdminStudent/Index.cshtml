@model IEnumerable<SchoolManagementRepository.Student>

@{
    Layout = "~/Views/Shared/_SharedLayout.cshtml";
}
@section title{
    <title>Home Page</title>
}
@section css{

}

    <p style="text-align:right">
        <button type="button"   class="btn btn-primary"> @Html.ActionLink("+ Create New Student", "Create", null, new { @style = "color:white;" })</button>
    </p>
    <table class="table table-bordered" border="1">
        <tr style="background-color:#D6DAF3">
            <th align="right">
                Username
            </th>
            <th align="center">
              First Name
            </th>
            <th align="center">
                Last Name
            </th>
            <th align="center">
                Class 
            </th>
            <th align="center">
                Roll
            </th>
            <th align="center">
                Gender
            </th>
            <th align="center">
                Email
            </th>
    
            <th align="center">
                Gurdian Phone No
            </th>
            <th align="center">
               Admission Date
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.ClassNumber)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Roll)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
         
            <td align="center">
                @Html.DisplayFor(modelItem => item.GurdianPhoneNo)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.AdmissionDate)
            </td>
            <td align="center">
                <button type="button" class="btn btn-primary"> @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @style = "color:white;" }) </button>
                <button type="button" class="btn btn-success"> @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @style = "color:white;" })</button>
                <button type="button" class="btn btn-danger">  @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @style = "color:white;" })</button>
            </td>
            </tr>
    }
    
    </table>

